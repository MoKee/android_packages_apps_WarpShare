<resources>

    <style name="AppThemeBase" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:colorEdgeEffect">?colorControlHighlight</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:navigationBarDividerColor">#1f000000</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ShareTheme" parent="AppThemeBase">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
